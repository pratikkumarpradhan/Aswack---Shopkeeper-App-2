<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ThankYouForAddActivity">

    <TextView
        android:id="@+id/tvSmsgtitleone"
        style="@style/forgotpasswordblue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:textSize="@dimen/_18sdp"
        android:text="Thanks for choosing Aswack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/ivSmsgright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_success"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="@+id/tvSmsgtitleone"
        app:layout_constraintStart_toStartOf="@+id/tvSmsgtitleone"
        app:layout_constraintTop_toBottomOf="@+id/tvSmsgtitleone" />

    <TextView
        android:id="@+id/tvSmsgtitlethree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:gravity="center"
        android:text="Your request is under review."
        android:textSize="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ivSmsgright"
        app:layout_constraintTop_toBottomOf="@+id/ivSmsgright" />

    <TextView
        android:id="@+id/tvSmsgtitlefour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="You will be notified once it is approved."
        app:layout_constraintEnd_toEndOf="@+id/tvSmsgtitlethree"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="5sp"
        app:layout_constraintStart_toStartOf="@+id/tvSmsgtitlethree"
        app:layout_constraintTop_toBottomOf="@+id/tvSmsgtitlethree" />


    <TextView
        android:id="@+id/tvSmsgtitleFive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Your custom package request id is ashDwk."
        app:layout_constraintEnd_toEndOf="@+id/tvSmsgtitlefour"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="5sp"
        app:layout_constraintStart_toStartOf="@+id/tvSmsgtitlefour"
        app:layout_constraintTop_toBottomOf="@+id/tvSmsgtitlefour"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvSmsgtitleSix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Our custome executive will contact you soon."
        app:layout_constraintEnd_toEndOf="@+id/tvSmsgtitlefour"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="5sp"
        app:layout_constraintStart_toStartOf="@+id/tvSmsgtitlefour"
        app:layout_constraintTop_toBottomOf="@+id/tvSmsgtitleFive"
        android:visibility="gone"/>


    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custombtnwhiteblue"
        android:text="@string/ok"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_40sdp"
        android:paddingRight="@dimen/_20sdp"
        android:paddingLeft="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="@+id/tvSmsgtitleSix"
        app:layout_constraintStart_toStartOf="@+id/tvSmsgtitleSix"
        app:layout_constraintTop_toBottomOf="@+id/tvSmsgtitleSix" />

</androidx.constraintlayout.widget.ConstraintLayout>