<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_5sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8sdp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="120dp"/>


        <TextView
            android:id="@+id/tvPersonName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
            android:text="Person Name : "
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/text_color"/>

        <TextView
            android:id="@+id/tvPersonNameValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:text="@string/price"
            android:textColor="@color/purple_700"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/poppins_semibold"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPersonName"
            android:text="Product Name : "
            android:textSize="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_4sdp"
            android:textColor="@color/text_color"/>

        <TextView
            android:id="@+id/tvProductNameValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:text="@string/price"
            android:textColor="@color/purple_700"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="@dimen/_4sdp"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/tvPersonName"/>

        <TextView
            android:id="@+id/tvOfferName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvProductName"
            android:text="Offer Name : "
            android:textSize="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_4sdp"
            android:textColor="@color/text_color"/>

        <TextView
            android:id="@+id/tvOfferNameValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:text="@string/price"
            android:textColor="@color/red"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_4sdp"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/tvProductName"/>


        <TextView
            android:id="@+id/tvAddQuotation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/_10sdp"
            android:text="@string/add_quotation"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:textSize="@dimen/_13ssp"
            android:drawablePadding="3dp"
            android:drawableStart="@drawable/ic_baseline_add_24_red"
            android:layout_marginTop="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvOfferName"/>

        <TextView
            android:id="@+id/tvViewQuotation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/_10sdp"
            android:text="@string/view_quotation"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="@dimen/_14ssp"
            android:drawablePadding="3dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvOfferName"
            android:visibility="gone"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>