<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.MyProductsActivity">

    <include
        android:id="@+id/clHeader"
        layout="@layout/header_title" />

    <include
        android:id="@+id/clUsage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        layout="@layout/usage_product_offer_notification"
        app:layout_constraintTop_toBottomOf="@id/clHeader"/>


    <TextView
        android:id="@+id/tvProductList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/poppins_medium"
        android:includeFontPadding="false"
        android:text="@string/your_offer_list"
        android:textColor="@color/purple_700"
        android:textSize="@dimen/_13ssp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clUsage" />

    <TextView
        android:id="@+id/tvProductCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:includeFontPadding="false"
        android:visibility="gone"
        android:textColor="@color/orange"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintStart_toStartOf="@id/tvProductList"
        app:layout_constraintTop_toBottomOf="@id/clUsage" />

    <TextView
        android:id="@+id/tvAddOffers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/bluebackandwhitetext"
        android:drawableLeft="@drawable/ic_round_add_24"
        android:fontFamily="@font/poppins_medium"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingTop="@dimen/_7sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingBottom="@dimen/_7sdp"
        android:text="@string/add_new_offers"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clHeader"
        android:layout_marginTop="@dimen/_10sdp"/>

    <include
        android:id="@+id/etSearch"
        layout="@layout/search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clUsage" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvOffer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etSearch" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"></ProgressBar>

</androidx.constraintlayout.widget.ConstraintLayout>