        <TextView
            android:id="@+id/tvIsTubeLessValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"

            
            android:textColor="@color/purple_700"
