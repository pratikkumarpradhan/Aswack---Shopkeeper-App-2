<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    tools:context=".activities.VerifyOTPActivity">

    <ImageView
        android:id="@+id/ivForgotpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_35sdp"
        android:src="@drawable/app_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clForgotpassword"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_50sdp"
        android:background="@drawable/whitebackgroungbluetext"
        android:padding="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivForgotpassword">

        <TextView
            android:id="@+id/tvFptitleone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:text="Verification Code"
            android:textColor="@color/orange"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvFptitletwo"
            style="@style/forgotpasswordblue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:gravity="center"
            android:text="Please type the verification code sent"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/tvFptitleone"
            app:layout_constraintStart_toStartOf="@+id/tvFptitleone"
            app:layout_constraintTop_toBottomOf="@+id/tvFptitleone" />

        <TextView
            android:id="@+id/tvFptitlethree"
            style="@style/forgotpasswordblue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="to +91-99887*****"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/tvFptitletwo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFptitletwo" />


        <TextView
            android:id="@+id/tvEnterOtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Enter Otp"
            android:visibility="gone"
            android:textColor="@color/orange"
            app:layout_constraintStart_toStartOf="@+id/tvFptitlethree"
            app:layout_constraintTop_toBottomOf="@+id/tvFptitlethree" />

        <com.chaos.view.PinView
            android:id="@+id/pinView"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/poppins_bold"
            android:inputType="number"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_18ssp"
            app:itemHeight="@dimen/_48sdp"
            app:itemRadius="@dimen/_10sdp"
            app:itemSpacing="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvEnterOtp"
            app:lineColor="@color/purple_700"
            app:viewType="rectangle" />

        <TextView
            android:id="@+id/tvResendOTP"
            style="@style/forgotpasswordblue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resend_it"
            android:textColor="@color/purple_700"
            app:layout_constraintEnd_toEndOf="@id/pinView"
            app:layout_constraintTop_toBottomOf="@+id/pinView" />

        <TextView
            android:id="@+id/tvSubmit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/poppins_medium"
            android:padding="@dimen/_5sdp"
            android:text="@string/submit"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintEnd_toEndOf="@id/pinView"
            app:layout_constraintStart_toStartOf="@id/pinView"
            app:layout_constraintTop_toBottomOf="@id/tvResendOTP" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>