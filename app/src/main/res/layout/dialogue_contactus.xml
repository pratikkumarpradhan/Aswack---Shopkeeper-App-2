<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cvContactvia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_6sdp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clContactvia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp">

            <TextView
                android:id="@+id/tvContactvia"
                style="@style/textview_13ssp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Contact Details"
                android:textSize="@dimen/_15sdp"
                app:layout_constraintEnd_toEndOf="@id/clContactvia"
                app:layout_constraintStart_toStartOf="@id/clContactvia"
                app:layout_constraintTop_toTopOf="@id/clContactvia" />

            <TextView
                android:id="@+id/tvContact1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawableLeft="@drawable/ic_phone"
                android:drawableTint="@color/orange"
                android:fontFamily="@font/poppins_regular"
                android:gravity="left"
                android:padding="@dimen/_3sdp"
                android:text=" +141-1"
                android:textColor="@color/black"
                android:drawablePadding="3dp"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvContactvia" />

            <TextView
                android:id="@+id/tvContact2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_phone"
                android:drawableTint="@color/orange"
                android:fontFamily="@font/poppins_regular"
                android:gravity="left"
                android:padding="@dimen/_3sdp"
                android:drawablePadding="3dp"
                android:text=" +141-123456789"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvContact1" />


            <TextView
                android:id="@+id/tvContact3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_phone"
                android:drawableTint="@color/orange"
                android:drawablePadding="3dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="left"
                android:padding="@dimen/_3sdp"
                android:text=" +141-123456789"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toStartOf="@id/tvContact1"
                app:layout_constraintTop_toBottomOf="@id/tvContact2" />


            <TextView
                android:id="@+id/tvEmail1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:drawableLeft="@drawable/ic_email"
                android:fontFamily="@font/poppins_regular"
                android:drawablePadding="3dp"
                android:gravity="left"
                android:text=" sales@companymail.com"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvContact1" />

            <TextView
                android:id="@+id/tvEmail2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_web"
                android:fontFamily="@font/poppins_regular"
                android:gravity="left"
                android:text=" www.companyname.com"
                android:textColor="@color/black"
                android:drawablePadding="3dp"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintEnd_toEndOf="@id/tvEmail1"
                app:layout_constraintStart_toStartOf="@id/tvEmail1"
                app:layout_constraintTop_toBottomOf="@id/tvEmail1" />

            <ImageView
                android:id="@+id/ivclose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close"
                app:layout_constraintEnd_toEndOf="@id/tvContactvia"
                app:layout_constraintTop_toTopOf="@id/tvContactvia"
                app:tint="@color/gray" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>